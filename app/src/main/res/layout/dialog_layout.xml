<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <!--    挖空引导图-->
    <com.zyj.demo.MyView
        android:id="@+id/round_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/map_finger_full"
        app:layout_constraintEnd_toEndOf="@id/round_image"
        app:layout_constraintStart_toStartOf="@id/round_image"
        app:layout_constraintTop_toBottomOf="@id/round_image" />

</androidx.constraintlayout.widget.ConstraintLayout>